# Production Environment Configuration for AWS Deployment

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=prod-secret-key-change-this-in-aws-secrets-manager
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Security Configuration
# Get these from https://www.google.com/recaptcha/admin/create
# Domain: reborncloud.online
RECAPTCHA_SITE_KEY=6LcXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
RECAPTCHA_SECRET_KEY=6LcXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Rate Limiting Configuration
RATELIMIT_STORAGE_URL=memory://
RESUME_DOWNLOAD_LIMIT=5  # Downloads per hour per IP

# AWS Configuration
AWS_DEFAULT_REGION=ap-south-2

# Other Configuration
PYTHONUNBUFFERED=1
